{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block content %}

    <h1>Accueil</h1>
    <section id="tableau">
        <table>
            <thead>
                <th>Référence</th>
                <th>Nom du produit</th>
                <th>Prix</th>
                <th>Modifier <br>
                    Supprimer</th>
            </thead>
            <tbody>
                    {% for product in mcTableauProductRepository %}               
                    <tr class="table-row">
                        <td class="table-product-id">{{ product.reference }}</td>
                        <td class="table-product-name">{{ product.name }}</td>
                        <td class="table-product-price">{{ product.price }} €</td>
                        <td>
                            <a href="#"><i class="fas fa-pen"></i></a>
                            <a href="#"><i class="fas fa-times-circle"></i></a>
                        </td>
                    </tr>
                    {% endfor %}
            </tbody>
        </table>
    </section>

{% endblock %}
